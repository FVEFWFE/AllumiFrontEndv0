# Production Environment Variables for Allumi
# Copy this to Vercel Environment Variables

# App Configuration
NEXT_PUBLIC_APP_URL=https://allumi.com
NEXT_PUBLIC_SHORT_URL=https://allumi.to
NODE_ENV=production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_key

# FingerprintJS
NEXT_PUBLIC_FINGERPRINT_API_KEY=your_fingerprintjs_api_key

# Webhook Security
WEBHOOK_SECRET=your_secure_webhook_secret

# Stripe (for payments via Whop integration)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Whop Integration
WHOP_API_KEY=your_whop_api_key
WHOP_WEBHOOK_SECRET=your_whop_webhook_secret

# Featurebase (already installed on frontend)
NEXT_PUBLIC_FEATUREBASE_ORGANIZATION=your_featurebase_org
NEXT_PUBLIC_FEATUREBASE_PROJECT_ID=your_featurebase_project

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Attio CRM Integration
ATTIO_API_KEY=your_attio_api_key

# Resend (for transactional emails)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=hello@allumi.com

# Redis (for rate limiting and caching)
REDIS_URL=your_redis_url

# Sentry (for error tracking)
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn